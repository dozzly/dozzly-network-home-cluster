  # -------- Talos config generator --------
  
  - path: /usr/local/bin/talos-generate-configs.sh
    permissions: "0755"
    owner: root:root
    content: |
      #!/usr/bin/env bash
      set -euo pipefail

      # Load env
      source /etc/cloud/admin.env

      : "${CLUSTER_NAME:?Set in /etc/cloud/admin.env}"
      : "${VIP_API_IP:?Set in /etc/cloud/admin.env}"
      : "${TALOS_OUT_DIR:=/srv/talos}"

      ENDPOINT="https://${VIP_API_IP}:6443"
      mkdir -p "$TALOS_OUT_DIR"

      # Subnet prefix length (default /24 unless overridden in admin.env)
      : "${SUBNET_PREFIX:=24}"

      # DNS config (optional)
      DNS_LIST=()
      [[ -n "${DNS1:-}" ]] && DNS_LIST+=("\"${DNS1}\"")
      [[ -n "${DNS2:-}" ]] && DNS_LIST+=("\"${DNS2}\"")
      DNS_JSON=$(IFS=,; echo "${DNS_LIST[*]:-}")

      # Respect force regen
      regen_needed="no"
      if [[ "${TALOS_FORCE_REGEN:-no}" == "yes" ]]; then
        regen_needed="yes"
      elif [[ ! -f "$TALOS_OUT_DIR/controlplane.yaml" || ! -f "$TALOS_OUT_DIR/worker.yaml" ]]; then
        regen_needed="yes"
      fi

      if [[ "$regen_needed" == "yes" ]]; then
        echo "[talos] generating base machine configs for ${CLUSTER_NAME} (${ENDPOINT})"

        if [[ -n "${TALOS_SECRETS_FILE:-}" ]]; then
          [[ -f "$TALOS_SECRETS_FILE" ]] || { echo "[talos] TALOS_SECRETS_FILE not found: $TALOS_SECRETS_FILE"; exit 1; }
          talosctl gen config "$CLUSTER_NAME" "$ENDPOINT" \
            --with-secrets "$TALOS_SECRETS_FILE" \
            --output "$TALOS_OUT_DIR"
        else
          SECRETS="$TALOS_OUT_DIR/secrets.yaml"
          [[ -f "$SECRETS" ]] || talosctl gen secrets --output-file "$SECRETS"
          talosctl gen config "$CLUSTER_NAME" "$ENDPOINT" \
            --with-secrets "$SECRETS" \
            --output "$TALOS_OUT_DIR"
        fi
      else
        echo "[talos] base configs already exist in $TALOS_OUT_DIR (skipping gen)"
      fi

      base_cp="$TALOS_OUT_DIR/controlplane.yaml"
      [[ -f "$base_cp" ]] || { echo "[talos] missing $base_cp"; exit 1; }

      # Helper: patch a base control-plane config into a per-node config
      mk_control_cfg() {
        local HOST="$1" IP="$2" IFACE="$3"
        local OUT="$TALOS_OUT_DIR/controlplane-${HOST}.yaml"

        # JSON6902 patch: hostname + static IP + default route + optional DNS + workloads on CPs + systemExtensions
        cat >"$TALOS_OUT_DIR/.patch-${HOST}.json" <<'JSON'
      [
        {"op":"add","path":"/machine/network/hostname","value":"__HOST__"},
        {"op":"add","path":"/machine/network/interfaces","value":[
          {
            "interface":"__IFACE__",
            "addresses":["__IP__/__PFX__"],
            "routes":[{"network":"0.0.0.0/0","gateway":"__GW__"}],
            "dhcp": false
          }
        ]},
        {"op":"add","path":"/cluster/allowSchedulingOnControlPlanes","value":true},
        {"op":"add","path":"/machine/systemExtensions","value":{
          "officialExtensions":[
            "ghcr.io/siderolabs/iscsi-tools",
            "ghcr.io/siderolabs/nfs-utils"
          ]
        }}
      ]
      JSON

        # Substitute placeholders
        sed -i \
          -e "s|__HOST__|${HOST}|g" \
          -e "s|__IFACE__|${IFACE}|g" \
          -e "s|__IP__|${IP}|g" \
          -e "s|__PFX__|${SUBNET_PREFIX}|g" \
          -e "s|__GW__|${GATEWAY}|g" \
          "$TALOS_OUT_DIR/.patch-${HOST}.json"

        # Apply optional DNS patch
        if [[ -n "$DNS_JSON" ]]; then
          cat >"$TALOS_OUT_DIR/.patch-${HOST}-dns.json" <<JSON
      [
        {"op":"add","path":"/machine/network/nameservers","value":[${DNS_JSON}]}
      ]
      JSON
          talosctl machineconfig patch "$base_cp" \
            --patch "@$TALOS_OUT_DIR/.patch-${HOST}.json" \
            --patch "@$TALOS_OUT_DIR/.patch-${HOST}-dns.json" \
            > "$OUT"
        else
          talosctl machineconfig patch "$base_cp" \
            --patch "@$TALOS_OUT_DIR/.patch-${HOST}.json" \
            > "$OUT"
        fi

        echo "  wrote $OUT"
      }

      echo "[talos] creating per-node control-plane configs"

      # CONTROL VM
      : "${CONTROL_VM_HOSTNAME:?}"
      : "${CONTROL_VM_IP:?}"
      : "${CONTROL_VM_IFACE:?}"
      mk_control_cfg "$CONTROL_VM_HOSTNAME" "$CONTROL_VM_IP" "$CONTROL_VM_IFACE"

      # NUC1
      : "${NUC1_HOSTNAME:?}"
      : "${NUC1_IP:?}"
      : "${NUC1_IFACE:?}"
      mk_control_cfg "$NUC1_HOSTNAME" "$NUC1_IP" "$NUC1_IFACE"

      # NUC2
      : "${NUC2_HOSTNAME:?}"
      : "${NUC2_IP:?}"
      : "${NUC2_IFACE:?}"
      mk_control_cfg "$NUC2_HOSTNAME" "$NUC2_IP" "$NUC2_IFACE"

      # Cleanup temp patches
      rm -f "$TALOS_OUT_DIR"/.patch-*.json

      echo "[talos] done."

  # -------- Matchbox Configuration Publish --------
  
  - path: /usr/local/bin/gen_node.sh
    permissions: "0755"
    owner: root:root
    content: |
      #!/usr/bin/env bash
      # usage: gen-node host mac arch ip
      set -euo pipefail
      host="$1"; mac="$2"; arch="$3"; ip="$4"

      # shellcheck disable=SC1091
      . /etc/cloud/admin.env

      MATCHBOX_DIR=${MATCHBOX_DIR:-/srv/matchbox}
      profiles_dir="$MATCHBOX_DIR/profiles"
      groups_dir="$MATCHBOX_DIR/groups"
      install -d -m 0755 "$profiles_dir" "$groups_dir"

      compose_ip_static(){ local ip="$1" gw="$2" nm="$3" host="$4" dns0="$5" dns1="${6:-}"; [[ -n "$dns1" ]] && printf '%s::%s:%s:%s::off:%s:%s' "$ip" "$gw" "$nm" "$host" "$dns0" "$dns1" || printf '%s::%s:%s:%s::off:%s' "$ip" "$gw" "$nm" "$host" "$dns0"; }

      ip_static="$(compose_ip_static "$ip" "$GATEWAY_IP" "$NETMASK" "$host" "$DNS0" "$DNS1")"
      arch_norm="$(echo "$arch" | awk '{print tolower($0)}' | sed 's/x86_64/amd64/; s/aarch64/arm64/')"
      kernel="/assets/talos/${TALOS_VERSION}/${arch_norm}/vmlinuz"
      initrd="/assets/talos/${TALOS_VERSION}/${arch_norm}/initramfs.xz"
      profile_id="talos-${host}-${arch_norm}"

      cat > "$profiles_dir/${profile_id}.json" <<JSON
      { "id": "${profile_id}", "name": "${profile_id}",
        "boot": { "kernel": "${kernel}", "initrd": ["${initrd}"],
          "args": ["talos.platform=metal","console=tty0","console=ttyS0,115200n8","rd.neednet=1","ip=${ip_static}","slab_nomerge","pti=on","talos.config=http://${ADMIN_VM_IP}:${MATCHBOX_HTTP_PORT}/assets/configs/controlplane-${host}.yaml"] } }
      JSON

      mac_lc="$(echo "$mac" | tr A-F a-f)"
      cat > "$groups_dir/${host}.json" <<JSON
      { "id":"${host}","name":"${host} (${arch_norm})","profile":"${profile_id}","selector":{"mac":"${mac_lc}"} }
      JSON

      systemctl reload-or-restart matchbox || true
      echo "Added node ${host} (${arch_norm}) with MAC ${mac_lc} → profile ${profile_id}"

  # -------- Matchbox Configuration Publish --------
  
  - path: /usr/local/bin/matchbox-publish-configs.sh
    permissions: "0755"
    owner: root:root
    content: |
      #!/usr/bin/env bash
      set -Eeuo pipefail

      # --- Admin/env ---------------------------------------------------------------
      if [[ -f /etc/cloud/admin.env ]]; then
        # shellcheck disable=SC1091
        . /etc/cloud/admin.env
      else
        echo "[matchbox] /etc/cloud/admin.env missing; aborting" >&2
        exit 1
      fi

      : "${BAKE_STATIC_IP:=true}"   # true => per-node profiles; false => shared + metadata

      : "${MATCHBOX_DIR:=/srv/matchbox}"
      : "${MATCHBOX_HTTP_PORT:=8080}"
      : "${TALOS_OUT_DIR:=/srv/talos}"
      : "${ADMIN_VM_IP:?Set ADMIN_VM_IP}"
      : "${TALOS_VERSION:?Set TALOS_VERSION (e.g. v1.11.1)}"

      : "${CONTROL_VM_HOSTNAME:?Set CONTROL_VM_HOSTNAME}"
      : "${NUC1_HOSTNAME:?Set NUC1_HOSTNAME}"
      : "${NUC2_HOSTNAME:?Set NUC2_HOSTNAME}"
      : "${CONTROL_VM_MAC:?Set CONTROL_VM_MAC}"
      : "${NUC1_MAC:?Set NUC1_MAC}"
      : "${NUC2_MAC:?Set NUC2_MAC}"

      # Per-node arch (defaults)
      : "${CONTROL_ARCH:=amd64}"
      : "${NUC1_ARCH:=amd64}"
      : "${NUC2_ARCH:=amd64}"

      # ---- Static networking (REQUIRED for static PXE) ----------------------------
      # One IP per node, plus common GW/NM/DNS. Add these to /etc/cloud/admin.env.
      : "${CONTROL_VM_IP:?Set CONTROL_VM_IP (e.g. 192.168.1.155)}"
      : "${NUC1_IP:?Set NUC1_IP}"
      : "${NUC2_IP:?Set NUC2_IP}"
      : "${GATEWAY_IP:?Set GATEWAY_IP (e.g. 192.168.1.1)}"
      : "${NETMASK:?Set NETMASK (e.g. 255.255.255.0)}"
      : "${DNS0:?Set DNS0}"
      : "${DNS1:=}"

      # Optional: use iPXE ${next-server} in talos.config URL
      : "${USE_NEXT_SERVER:=false}"

      # --- Paths -------------------------------------------------------------------
      assets_dir="$MATCHBOX_DIR/assets"
      profiles_dir="$MATCHBOX_DIR/profiles"
      groups_dir="$MATCHBOX_DIR/groups"
      configs_src_dir="$TALOS_OUT_DIR"
      configs_dst_dir="$assets_dir/configs"          # must be under assets so it’s HTTP-served
      install -d -m 0755 "$assets_dir" "$profiles_dir" "$groups_dir" "$configs_dst_dir"

      # Filesystem locations for PXE bits
      talos_fs_kernel_amd64="$assets_dir/talos/${TALOS_VERSION}/amd64/vmlinuz"
      talos_fs_initrd_amd64="$assets_dir/talos/${TALOS_VERSION}/amd64/initramfs.xz"
      talos_fs_kernel_arm64="$assets_dir/talos/${TALOS_VERSION}/arm64/vmlinuz"
      talos_fs_initrd_arm64="$assets_dir/talos/${TALOS_VERSION}/arm64/initramfs.xz"

      # HTTP paths used in profile JSON
      talos_http_kernel_amd64="/assets/talos/${TALOS_VERSION}/amd64/vmlinuz"
      talos_http_initrd_amd64="/assets/talos/${TALOS_VERSION}/amd64/initramfs.xz"
      talos_http_kernel_arm64="/assets/talos/${TALOS_VERSION}/arm64/vmlinuz"
      talos_http_initrd_arm64="/assets/talos/${TALOS_VERSION}/arm64/initramfs.xz"

      # Where to fetch releases from (keep both patterns)
      : "${TALOS_RELEASE_BASE_1:=https://github.com/siderolabs/talos/releases/download/${TALOS_VERSION}}"
      : "${TALOS_RELEASE_BASE_2:=https://github.com/siderolabs/talos/releases/download/${TALOS_VERSION}}"

      upper(){ tr '[:lower:]' '[:upper:]'; }
      lower(){ tr '[:upper:]' '[:lower:]'; }
      normarch(){ case "${1,,}" in amd64|x86_64) echo "amd64";; arm64|aarch64) echo "arm64";; *) echo "$1";; esac; }

      compose_ip_static() {
        # Linux initramfs static format:
        # ip=<client-ip>::<gateway>:<netmask>:<hostname>:<device>:<autoconf>[:<dns0>][:<dns1>]
        # We leave <device> empty (let initramfs pick first NIC), disable autoconf.
        local ip="$1" gw="$2" nm="$3" host="$4" dns0="$5" dns1="${6:-}"
        if [[ -n "$dns1" ]]; then
          printf '%s::%s:%s:%s::off:%s:%s' "$ip" "$gw" "$nm" "$host" "$dns0" "$dns1"
        else
          printf '%s::%s:%s:%s::off:%s' "$ip" "$gw" "$nm" "$host" "$dns0"
        fi
      }

      # --- Fetch Talos PXE assets if missing --------------------------------------
      ensure_asset() {
        local dest="$1"; shift
        local urls=("$@")
        install -d -m 0755 "$(dirname "$dest")"
        [[ -f "$dest" ]] && return 0
        for u in "${urls[@]}"; do
          echo "[matchbox] fetching $(basename "$dest") from $u"
          if command -v curl >/dev/null 2>&1; then
            curl -fsSL --retry 3 -o "$dest" "$u" && return 0
          elif command -v wget >/dev/null 2>&1; then
            wget -qO "$dest" "$u" && return 0
          fi
        done
        echo "[matchbox] failed to download $(basename "$dest")" >&2
        return 1
      }

      # amd64
      ensure_asset "$talos_fs_kernel_amd64" \
        "${TALOS_RELEASE_BASE_1}/vmlinuz-amd64" \
        "${TALOS_RELEASE_BASE_2}/amd64/vmlinuz"
      ensure_asset "$talos_fs_initrd_amd64" \
        "${TALOS_RELEASE_BASE_1}/initramfs-amd64.xz" \
        "${TALOS_RELEASE_BASE_2}/amd64/initramfs.xz"

      # arm64
      ensure_asset "$talos_fs_kernel_arm64" \
        "${TALOS_RELEASE_BASE_1}/vmlinuz-arm64" \
        "${TALOS_RELEASE_BASE_2}/arm64/vmlinuz"
      ensure_asset "$talos_fs_initrd_arm64" \
        "${TALOS_RELEASE_BASE_1}/initramfs-arm64.xz" \
        "${TALOS_RELEASE_BASE_2}/arm64/initramfs.xz"

      # --- Publish Talos machine configs under assets/configs ----------------------
      publish_config() {
        local node="$1"
        local src="$configs_src_dir/controlplane-${node}.yaml"
        local dst="$configs_dst_dir/controlplane-${node}.yaml"
        [[ -f "$src" ]] || { echo "[matchbox] missing $src — run talos-generate-configs.sh first"; exit 1; }
        install -m 0644 "$src" "$dst"
        echo "  + /assets/configs/controlplane-${node}.yaml"
      }

      echo "[matchbox] publishing configs into assets:"
      publish_config "$CONTROL_VM_HOSTNAME"
      publish_config "$NUC1_HOSTNAME"
      publish_config "$NUC2_HOSTNAME"

      # --- Profiles (shared per arch; templated args) ------------------------------
      talos_config_url_template() {
        local node="$1"
        if [[ "${USE_NEXT_SERVER}" == "true" ]]; then
          echo "http://\${next-server}:${MATCHBOX_HTTP_PORT}/assets/configs/controlplane-${node}.yaml"
        else
          echo "http://${ADMIN_VM_IP}:${MATCHBOX_HTTP_PORT}/assets/configs/controlplane-${node}.yaml"
        fi
      }

      write_shared_profile() {
        local profile_id="$1" kernel_http="$2" initrd_http="$3"
        cat > "$profiles_dir/${profile_id}.json" <<JSON
      {
        "id": "${profile_id}",
        "name": "${profile_id}",
        "boot": {
          "kernel": "${kernel_http}",
          "initrd": ["${initrd_http}"],
          "args": [
            "talos.platform=metal",
            "console=tty0",
            "console=ttyS0,115200n8",
            "rd.neednet=1",
            "ip={{.IP_STATIC}}",
            "slab_nomerge",
            "pti=on",
            "talos.config=http://{{.HTTP_IP}}:${MATCHBOX_HTTP_PORT}/assets/configs/{{.CONFIG}}"
          ]
        }
      }
      JSON
        echo "  + $profiles_dir/${profile_id}.json"
      }

      # If BAKE_STATIC_IP=true, write an explicit per-node profile with ip=... baked in.
      write_node_profile() {
        local host="$1" arch="$2" node_ip="$3"
        local kernel_http initrd_http
        case "$(normarch "$arch")" in
          amd64) kernel_http="$talos_http_kernel_amd64"; initrd_http="$talos_http_initrd_amd64" ;;
          arm64) kernel_http="$talos_http_kernel_arm64"; initrd_http="$talos_http_initrd_arm64" ;;
          *) echo "[matchbox] unsupported arch '$arch'"; return 1 ;;
        esac

        local ip_static; ip_static="$(compose_ip_static "$node_ip" "$GATEWAY_IP" "$NETMASK" "$host" "$DNS0" "$DNS1")"
        local profile_id="talos-${host}-$(normarch "$arch")"

        cat > "$profiles_dir/${profile_id}.json" <<JSON
      {
        "id": "${profile_id}",
        "name": "${profile_id}",
        "boot": {
          "kernel": "${kernel_http}",
          "initrd": ["${initrd_http}"],
          "args": [
            "talos.platform=metal",
            "console=tty0",
            "console=ttyS0,115200n8",
            "rd.neednet=1",
            "ip=${ip_static}",
            "slab_nomerge",
            "pti=on",
            "talos.config=http://${ADMIN_VM_IP}:${MATCHBOX_HTTP_PORT}/assets/configs/controlplane-${host}.yaml"
          ]
        }
      }
      JSON
        echo "  + $profiles_dir/${profile_id}.json"
      }

      # --- Groups (per node; inject metadata for ip/config/http_ip) ----------------
      arch_profile() {
        case "$(normarch "$1")" in
          amd64) echo "talos-controlplane-amd64" ;;
          arm64) echo "talos-controlplane-arm64" ;;
          *) echo "UNKNOWN" ;;
        esac
      }

      echo "[matchbox] writing profiles:"
      # always write the shared ones (harmless), used when BAKE_STATIC_IP=false
      write_shared_profile "talos-controlplane-amd64" "$talos_http_kernel_amd64" "$talos_http_initrd_amd64"
      write_shared_profile "talos-controlplane-arm64" "$talos_http_kernel_arm64" "$talos_http_initrd_arm64"

      emit_group() {
        local host="$1" mac="$2" arch="$3" node_ip="$4"
        local mac_lc; mac_lc="$(printf '%s' "$mac" | lower)"

        if [[ "${BAKE_STATIC_IP}" == "true" ]]; then
          # per-node profile with baked static ip
          write_node_profile "$host" "$arch" "$node_ip"
          local profile_id="talos-${host}-$(normarch "$arch")"
          cat > "$groups_dir/${host}.json" <<JSON
      {
        "id": "${host}",
        "name": "${host} (control-plane ${arch})",
        "profile": "${profile_id}",
        "selector": { "mac": "${mac_lc}" }
      }
      JSON
        else
          # shared profile + per-node metadata
          local profile_id; profile_id="$(arch_profile "$arch")"
          local ip_static; ip_static="$(compose_ip_static "$node_ip" "$GATEWAY_IP" "$NETMASK" "$host" "$DNS0" "$DNS1")"
          cat > "$groups_dir/${host}.json" <<JSON
      {
        "id": "${host}",
        "name": "${host} (control-plane ${arch})",
        "profile": "${profile_id}",
        "selector": { "mac": "${mac_lc}" },
        "metadata": {
          "http_ip": "${ADMIN_VM_IP}",
          "config": "controlplane-${host}.yaml",
          "ip_static": "${ip_static}"
        }
      }
      JSON
        fi
        echo "  + $groups_dir/${host}.json"
      }

      echo "[matchbox] writing groups:"
      emit_group "$CONTROL_VM_HOSTNAME" "$CONTROL_VM_MAC" "${CONTROL_ARCH:-amd64}" "$CONTROL_VM_IP"
      emit_group "$NUC1_HOSTNAME"       "$NUC1_MAC"       "${NUC1_ARCH:-amd64}"   "$NUC1_IP"
      emit_group "$NUC2_HOSTNAME"       "$NUC2_MAC"       "${NUC2_ARCH:-amd64}"   "$NUC2_IP"

      echo "[matchbox] wrote:"
      echo "  profiles:"
      echo "    - $profiles_dir/talos-controlplane-amd64.json"
      echo "    - $profiles_dir/talos-controlplane-arm64.json"
      echo "  groups:"
      echo "    - $groups_dir/${CONTROL_VM_HOSTNAME}.json"
      echo "    - $groups_dir/${NUC1_HOSTNAME}.json"
      echo "    - $groups_dir/${NUC2_HOSTNAME}.json"
      echo "  configs (HTTP):"
      echo "    - /assets/configs/controlplane-{${CONTROL_VM_HOSTNAME},${NUC1_HOSTNAME},${NUC2_HOSTNAME}}.yaml"

      # Optional: nudge matchbox
      if command -v systemctl >/dev/null 2>&1 && systemctl is-active --quiet matchbox 2>/dev/null; then
        systemctl reload-or-restart matchbox || true
      fi


  # -------- convenience wrapper: run all steps safely anytime --------
  - path: /usr/local/bin/cloud-apply
    permissions: "0755"
    owner: root:root
    content: |
      #!/usr/bin/env bash
      set -Eeuo pipefail
      export DEBIAN_FRONTEND=noninteractive

      if [[ $EUID -ne 0 ]]; then
        exec sudo -E "$0" "$@"
      fi

