  # -------- flux CLI installer (idempotent) --------
  - path: /usr/local/bin/install-flux-cli.sh
    permissions: "0755"
    owner: root:root
    content: |
      #!/usr/bin/env bash
      set -euo pipefail
      if ! command -v flux >/dev/null 2>&1; then
